@{
    var user = Context.Session.GetString("rol");
    var nombreUser = Context.Session.GetString("usuario");
}


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor Tareas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tp10_tl2.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/4e7276f25d.js" crossorigin="anonymous"></script>
</head>

<body>
    @if (!string.IsNullOrEmpty(user))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Logueo" asp-action="Index">Gestor Tareas</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 p-1">
                            @if (user == "Administrador")
                            {
                                <li class="nav-item d-flex column justify-content-center align-items-center p-2 hover-menu">
                                    <i class="fa-solid fa-user"></i>
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                                </li>
                            }
                            <li class="nav-item d-flex column justify-content-center align-items-center p-2 hover-menu">
                                <i class="fa-solid fa-list-check"></i>
                                <a class="nav-link" asp-area="" asp-controller="Tarea" asp-action="Index">Tareas</a>
                            </li>
                            <li class="nav-item d-flex column justify-content-center align-items-center p-2 hover-menu">
                                <i class="fa-solid fa-bars-progress"></i>
                                <a class="nav-link" asp-area="" asp-controller="Tablero" asp-action="Index">Tableros</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <small style="text-align: center;">Bienvenido @nombreUser</small>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - tp10_tl2 - <a asp-area="" asp-controller="Logueo" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
