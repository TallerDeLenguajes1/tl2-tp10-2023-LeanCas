@{
    ViewData["Title"] = "TareasTotales";
}

@model List<Tarea>

<div class="text-center">
    <h1 class="display-4">LISTA DE TAREAS TOTALES</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Color</th>
                <th scope="col">Estado</th>
                <th scope="col">ID-Usuario-Asignado</th>
                <th scope="col">Modificar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var T in Model)
            {
                <tr>
                    <th scope="row">@T.Id</th>
                    <td>@T.Nombre</td>
                    <td>@T.Descripcion</td>
                    <td>@T.Color</td>
                    <td>@T.Estado</td>
                    <td>@T.IdUsuarioAsignado</td>
                    <td>
                        <a class="actualizar" asp-controller="Tarea" asp-action="ModificarTarea"
                            asp-route-id="@T.Id">Modificar</a>
                    </td>
                    <td>
                        <a class="eliminar" asp-controller="Tarea" asp-action="EliminarTarea"
                            asp-route-id="@T.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a asp-controller="Tarea" asp-action="CrearTarea">
            <button class="btn btn-primary crear" type="button">AÃ±adir
                Tarea</button></a>
    </div>
</div>