@{
    ViewData["Title"] = "CrearTarea";
}

@model Tarea

<div class="text-center">
    <h1 class="display-4">Crear Tarea</h1>
    <form asp-controller="Tarea" asp-action="CrearTarea" method="post">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input asp-for="@Model.Nombre" type="text" class="form-control" id="nombre">
            <label for="desc" class="form-label">Descripcion</label>
            <input asp-for="@Model.Descripcion" type="text" class="form-control" id="desc">
            <label for="color" class="form-label">Color</label>
            <input asp-for="@Model.Color" type="text" class="form-control" id="color">
            <label for="estado" class="form-label">Estado</label>
            <select asp-for="@Model.Estado" class="form-control" id="estado">
                <option value="Ideas">Ideas</option>
                <option value="Todo" selected>Todo</option>
                <option value="Doing">Doing</option>
                <option value="Review">Review</option>
                <option value="Done">Done</option>
            </select>
            <label for="usu" class="form-label">Usuario Asignado</label>
            <input asp-for="@Model.IdUsuarioAsignado" value="@Model.IdUsuarioAsignado" type="text" class="form-control"
                id="usu">
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
