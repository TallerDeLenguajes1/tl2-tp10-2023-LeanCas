@{
    ViewData["Title"] = "CrearTarea";
}

@model tp10_tl2.Models.CrearTareaViewModel

<div class="text-center">
    <h1 class="display-4">Crear Tarea</h1>
    <form asp-controller="Tarea" asp-action="CrearTarea" method="post">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input asp-for="@Model.Nombre" type="text" class="form-control" id="nombre">
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span><br>

            <label for="desc" class="form-label">Descripcion</label>
            <input asp-for="@Model.Descripcion" type="text" class="form-control" id="desc">
            <span asp-validation-for="@Model.Descripcion" class="text-danger"></span><br>

            <label for="color" class="form-label">Color</label>
            <input asp-for="@Model.Color" type="text" class="form-control" id="color">
            <span asp-validation-for="@Model.Color" class="text-danger"></span><br>

            <label for="estado" class="form-label">Estado</label>
            <select asp-for="@Model.Estado" class="form-control" id="estado">
                <option value="Ideas">Ideas</option>
                <option value="Todo" selected>Todo</option>
                <option value="Doing">Doing</option>
                <option value="Review">Review</option>
                <option value="Done">Done</option>
            </select>

            <label for="usu" class="form-label">Usuario Asignado</label>
            <select asp-for="@Model.IdUsuarioAsignado" class="form-control" id="usu">
                @foreach (var U in @Model.ListaUsuario)
                {
                    <option value="@U.Id">@U.NombreDeUsuario</option>
                }
            </select>
            <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>


            <label for="tablero" class="form-label">Tablero Asignado</label>
            <select asp-for="@Model.IdTablero" class="form-control" id="tablero">
                @foreach (var T in @Model.ListaTablero)
                {
                    <option value="@T.Id">@T.Nombre</option>
                }
            </select>
            <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
