@model tp10_tl2.Models.ModificarTableroViewModel

@if (String.IsNullOrEmpty(Model.Nombre))
{
    <article>
        <p><strong>ERROR 404</strong></p>
    </article>

}
else
{
    <div class="text-center">
        <h1 class="display-4">Modificar Tablero</h1>
        <form asp-controller="Tablero" asp-action="ModificarTablero" method="post">
            <div class="mb-3">
                <label for="usu" class="form-label">Usuario Asignado</label>
                <select asp-for="@Model.IdUsuarioPropietario" class="form-control" id="usu">
                    @foreach (var U in @Model.ListaUsuario)
                    {
                        <option value="@U.Id">@U.NombreDeUsuario</option>
                    }
                </select>

                <label for="nombre" class="form-label">Nombre</label>
                <input asp-for="@Model.Nombre" type="text" class="form-control" id="nombre">
                <span asp-validation-for="@Model.Nombre" class="text-danger"></span>

                <label for="descripcion" class="form-label">Descripcion</label>
                <input asp-for="@Model.Descripcion" type="text" class="form-control" id="descripcion">
                <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>

                <input hidden asp-for="@Model.Id">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}