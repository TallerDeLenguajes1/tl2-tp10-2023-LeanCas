@model Usuario

@if (String.IsNullOrEmpty(Model.NombreDeUsuario))
{
    <article>
        <p><strong>ERROR 404</strong></p>
    </article>

}
else
{
    <div class="text-center">
        <h1 class="display-4">Modificar Usuario</h1>
        <form asp-controller="Usuario" asp-action="ModificarUsuarioForm" method="post">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input asp-for="@Model.NombreDeUsuario" value="@Model.NombreDeUsuario" type="text" class="form-control"
                    id="nombre">
                <input hidden asp.asp-for="@Model.Id">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
}